<section class="py-16 bg-white">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="mb-4">Find the Perfect Vacuum For Your Needs</h2>
      <p class="text-lg text-gray-600 max-w-3xl mx-auto">
        Different cleaning tasks require different types of vacuum cleaners. Explore our comprehensive guides for each category to find your perfect match.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {categories.map((category) => (
        <a href={category.slug} class="group">
          <div class="bg-gray-50 rounded-xl p-8 h-full transition-all duration-300 group-hover:bg-primary-50 group-hover:shadow-md">
            <div class="flex flex-col h-full">
              <!-- Icon -->
              <div class="mb-6 text-primary-600 bg-primary-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto">
                <svg class="w-10 h-10" viewBox="0 0 24 24" fill="currentColor">
                  <path d={category.iconPath}></path>
                </svg>
              </div>

              <!-- Content -->
              <div class="text-center">
                <h3 class="text-xl font-semibold mb-3 group-hover:text-primary-700 transition-colors">
                  {category.name}
                </h3>
                <p class="text-gray-600">
                  {category.description}
                </p>
              </div>

              <!-- View More Link -->
              <div class="mt-auto pt-6 text-center">
                <span class="inline-flex items-center text-primary-600 font-medium transition-colors group-hover:text-primary-800">
                  View {category.name}
                  <svg class="w-4 h-4 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </span>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
