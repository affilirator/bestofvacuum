---
interface EEATItem {
  title: string;
  description: string;
  icon: string;
}

const eeatPillars: EEATItem[] = [
  {
    title: "Experience",
    description: "Our testing team brings 15+ years of combined practical experience in product testing, engineering, and home cleaning technology evaluation.",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
  },
  {
    title: "Expertise",
    description: "Our team includes mechanical engineers, certified indoor air quality professionals, and consumer product test specialists with academic credentials.",
    icon: "M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"
  },
  {
    title: "Authoritativeness",
    description: "Our reviews and methodologies are cited by major publications, and our team members are regularly consulted as industry experts.",
    icon: "M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"
  },
  {
    title: "Trustworthiness",
    description: "We maintain strict editorial independence, disclose affiliate relationships transparently, and never accept payment for favorable reviews.",
    icon: "M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z"
  }
];

const certifications = [
  "Certified Indoor Air Quality Professional",
  "Mechanical Engineering Degrees",
  "Consumer Product Testing Certification",
  "Lab Testing Methodology Training"
];

const publications = [
  "Good Housekeeping",
  "CNET",
  "Consumer Reports",
  "The Spruce"
];
---

<section class="py-16 bg-white">
  <div class="container">
    <div class="max-w-3xl mx-auto text-center mb-12">
      <h2 class="mb-4">Why Trust Our Reviews</h2>
      <p class="text-lg text-gray-600">
        Our commitment to quality, expertise, and transparency makes Vacuum Expert Reviews a trusted source for cleaning technology information.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {eeatPillars.map(pillar => (
        <div class="bg-gray-50 rounded-lg p-6 flex items-start">
          <div class="bg-primary-100 text-primary-700 rounded-full p-3 mr-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={pillar.icon} />
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-2">{pillar.title}</h3>
            <p class="text-gray-600">{pillar.description}</p>
          </div>
        </div>
      ))}
    </div>

    <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="bg-secondary-50 rounded-lg p-6 border border-secondary-100">
        <h3 class="text-xl font-bold mb-4 text-secondary-800">Team Certifications</h3>
        <ul class="space-y-3">
          {certifications.map(cert => (
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-secondary-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>{cert}</span>
            </li>
          ))}
        </ul>
      </div>

      <div class="bg-primary-50 rounded-lg p-6 border border-primary-100">
        <h3 class="text-xl font-bold mb-4 text-primary-800">As Featured In</h3>
        <ul class="space-y-3">
          {publications.map(pub => (
            <li class="flex items-center">
              <svg class="w-5 h-5 mr-2 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 3a1 1 0 00-1.447-.894L8.763 6H5a3 3 0 000 6h.28l1.771 5.316A1 1 0 008 18h1a1 1 0 001-1v-4.382l6.553 3.276A1 1 0 0018 15V3z" clip-rule="evenodd"></path>
              </svg>
              <span>{pub}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
