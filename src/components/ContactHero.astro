---
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Contact Our Vacuum Expert Team",
  subtitle = "Have questions about vacuum cleaners or our review process? Our team is here to help."
} = Astro.props;
---

<section class="py-12 md:py-20 bg-gradient-to-br from-primary-50 to-gray-100">
  <div class="container">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="mb-4 font-serif">{title}</h1>
      <p class="text-xl md:text-2xl text-gray-600 mb-8">{subtitle}</p>

      <div class="flex flex-wrap justify-center gap-3">
        <a href="#contact-form" class="btn-primary">
          Contact Form
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </a>
        <a href="#faq" class="btn-outline">
          FAQs
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </a>
        <a href="#office-hours" class="btn-outline">
          Office Hours
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
