---
const { headings } = Astro.props;
---

<aside class="toc-container">
  <nav>
    <h3 class="toc-title">Table of Contents</h3>
    <ul class="toc-list">
      {headings.map(heading => (
        <li class="toc-item">
          <a href={`#${heading.id}`} class="toc-link">{heading.title}</a>
        </li>
      ))}
    </ul>
  </nav>
</aside>

<style>
  .toc-container {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
    margin: 2rem 0;
    position: sticky;
    top: 2rem;
  }

  .toc-title {
    color: #2b2d42;
    margin-bottom: 1rem;
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .toc-item {
    margin: 0.5rem 0;
  }

  .toc-link {
    color: #4a4e69;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .toc-link:hover {
    color: #4cc9f0;
  }
</style>