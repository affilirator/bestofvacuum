---
// ProsConsTable.astro - Component for displaying pros and cons in review articles
interface Props {
  pros: string[];
  cons: string[];
  title?: string;
}

const { pros, cons, title = "Pros & Cons" } = Astro.props;
---

<div class="pros-cons-container my-8 rounded-lg overflow-hidden shadow-md">
  {title && (
    <h3 class="text-xl font-bold p-4 bg-gray-100 text-gray-800">{title}</h3>
  )}

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 p-6 bg-white">
    <div class="pros">
      <h4 class="text-lg font-semibold text-green-700 flex items-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
        </svg>
        Pros
      </h4>

      <ul class="space-y-2">
        {pros.map(pro => (
          <li class="flex items-start">
            <span class="text-green-600 mr-2 mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </span>
            <span>{pro}</span>
          </li>
        ))}
      </ul>
    </div>

    <div class="cons">
      <h4 class="text-lg font-semibold text-red-700 flex items-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
        </svg>
        Cons
      </h4>

      <ul class="space-y-2">
        {cons.map(con => (
          <li class="flex items-start">
            <span class="text-red-600 mr-2 mt-1">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </span>
            <span>{con}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</div>

<style>
  .pros-cons-container {
    border: 1px solid #e5e7eb;
  }

  @media (max-width: 768px) {
    .pros, .cons {
      padding-bottom: 1.5rem;
    }

    .pros {
      border-bottom: 1px solid #e5e7eb;
    }

    .cons {
      padding-top: 1.5rem;
    }
  }

  @media (min-width: 768px) {
    .pros {
      border-right: 1px solid #e5e7eb;
      padding-right: 2rem;
    }

    .cons {
      padding-left: 2rem;
    }
  }
</style>
