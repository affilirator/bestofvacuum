---
interface Props {
  product: {
    name: string;
    image: string;
    description: string;
    price: number;
    salePrice?: number;
    url: string;
    features: string[];
  };
}

const { product } = Astro.props;
---

<div class="mb-12 bg-white rounded-xl shadow-md overflow-hidden">
  <div class="p-6 md:p-8">
    <div class="flex flex-col md:flex-row gap-8">
      <div class="md:w-1/3">
        <img
          src={product.image}
          alt={product.name}
          class="w-full h-auto object-contain mix-blend-multiply"
        />
      </div>

      <div class="md:w-2/3">
        <h2 class="text-2xl font-bold mb-2">{product.name}</h2>
        <p class="text-gray-700 mb-4">{product.description}</p>

        <div class="flex flex-col sm:flex-row sm:items-center gap-4 mb-6">
          <div>
            {product.salePrice ? (
              <div class="flex items-center">
                <span class="text-2xl font-bold text-primary-700">${product.salePrice}</span>
                <span class="ml-2 text-sm text-gray-500 line-through">${product.price}</span>
              </div>
            ) : (
              <span class="text-2xl font-bold text-primary-700">${product.price}</span>
            )}
          </div>

          <a
            href={product.url}
            target="_blank"
            rel="nofollow noopener sponsored"
            class="btn-primary text-center sm:ml-auto"
          >
            Check Price on Amazon
            <svg class="w-4 h-4 ml-2 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        </div>

        <div class="mb-4">
          <h3 class="text-lg font-semibold mb-2">Key Features</h3>
          <ul class="grid grid-cols-1 sm:grid-cols-2 gap-2 text-sm">
            {product.features.map(feature => (
              <li class="flex items-start">
                <svg class="w-5 h-5 text-green-500 mr-2 shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>